{% extends 'base.html.twig' %}

{% block title %}Profil | {{ parent() }}{% endblock %}

{% block body %}

<div class="flex w-full items-center justify-center">
    <div class="mt-5 w-2/3 mx-auto">

        <div class="bg-gray-200 flex-col p-4 border rounded-xl mt-5">
            <div>
                <div class="mb-3 pl-3 text-left">
                    <h1 class="text-3xl">Mon Profil</h1>
                </div>
            </div>
            <div class="flex">

                <div class="w-1/3 p-3">
                    {{ form_start(profilePictureForm, {'attr': {'id':'form_picture'}}) }}
                    <label>


                    {% if app.user.image %}
                        <div class="flex items-center justify-center rounded-lg shadow-lg mb-5 w-full h-1/2 border border-blue cursor-pointer">
                            <img class="rounded-lg" src="{{ asset('uploads/profile_pictures/' ~ app.user.image) }}" alt="Photo de profil">
                        </div>
                    {% endif %}


                    <div class="w-full flex flex-col items-center px-4 py-6 bg-white text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-blue hover:text-blue-900">
                        <svg class="w-8 h-8" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                            <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z" />
                        </svg>
                        <span class="mt-2 text-base leading-normal">Charger une photo</span>
                        {{ form_widget(profilePictureForm.image, {'attr': {'class':'hidden', 'accept':'image/*', 'onchange':'submitForm()'}}) }}
                    </div>
                    </label>
                    <div class="mt-5 flex justify-center">
                        <button class="hidden" type="submit">
                            Enregistrer
                        </button>
                    </div>
                    {{ form_end(profilePictureForm) }}
                </div>
                <div>
                    {{ form_start(participantForm) }}
                    <div class="flex flex-wrap">
                        <div class="w-1/2 p-2">
                            <div class="px-2 mb-1">
                                {{ form_label(participantForm.prenom) }}
                            </div>
                            {{ form_widget(participantForm.prenom, {'attr': {'class':'w-full block rounded-xl p-2 h-8'}}) }}
                        </div>
                        <div class="w-1/2 p-2">
                            <div class="px-2 mb-1">
                                {{ form_label(participantForm.nom) }}
                            </div>
                            {{ form_widget(participantForm.nom, {'attr': {'class':'w-full block rounded-xl p-2 h-8'}}) }}
                        </div>
                        <div class="w-1/2 p-2">
                            <div class="px-2 mb-1">
                                {{ form_label(participantForm.telephone) }}
                            </div>
                            {{ form_widget(participantForm.telephone, {'attr': {'class':'w-full block rounded-xl p-2 h-8'}}) }}
                        </div>
                        <div class="w-1/2 p-2">
                            <div class="px-2 mb-1">
                                {{ form_label(participantForm.email) }}
                            </div>
                            {{ form_widget(participantForm.email, {'attr': {'class':'w-full block rounded-xl p-2 h-8'}}) }}
                        </div>
                        <div class="w-1/2 p-2">
                            <div class="px-2 mb-1">
                                {{ form_label(participantForm.password.first) }}
                            </div>
                            {{ form_widget(participantForm.password.first, {'attr': {'class':'w-full block rounded-xl p-2 h-8'}}) }}
                        </div>
                        <div class="w-1/2 p-2">
                            <div class="px-2 mb-1">
                                {{ form_label(participantForm.password.second) }}
                            </div>
                            {{ form_widget(participantForm.password.second, {'attr': {'class':'w-full block rounded-xl p-2 h-8'}}) }}
                        </div>
                        <div class="w-1/2 p-2">
                            <div class="px-2 mb-1">
                                {{ form_label(participantForm.campus) }}
                            </div>
                            {{ form_widget(participantForm.campus, {'attr': {'class':'w-full block rounded-xl p-2 h-8'}}) }}
                        </div>
                    </div>

                    <div class="mt-5 flex justify-center">
                        <button class="bg-gray-500 rounded-md p-3 px-6 text-white" type="submit">
                            Enregistrer
                        </button>
                    </div>


                </div>
                {{ form_end(participantForm) }}
            </div>
        </div>
    </div>




</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function submitForm() {
            document.getElementById('form_picture').submit();
        }
    </script>
{% endblock %}
