{% extends 'base.html.twig' %}

{% block title %}Profil de {{ participant.prenom }} {{ participant.nom }} | {{ parent() }}{% endblock %}

{% block body %}

<div class="flex w-full items-center justify-center">
    <div class="mt-5 w-1/2 mx-auto">

        <div class="bg-gray-200 flex-col p-4 border rounded-xl mt-5">
            <div>
                <div class="mb-3 pl-3 text-left">
                    <h1 class="text-3xl">Profil de {{ participant.prenom }} {{ participant.nom | upper }}</h1>
                </div>
            </div>
            <div class="flex p-3">
                <div class="w-1/3 p-3">
                    {% if participant.image %}
                        <div class="rounded-lg shadow-lg mb-5 w-full border border-blue">
                            <img class="rounded-lg" src="{{ asset('uploads/profile_pictures/' ~ participant.image) }}" alt="Photo de profil">
                        </div>
                    {% endif %}
                </div>
                <div class="flex flex-wrap w-1/2 p-3">
                    <div class="w-1/2 p-2">
                        <div class="mb-1 font-bold">
                            Prénom
                        </div>
                        <div>
                            {{ participant.prenom }}
                        </div>
                    </div>
                    <div class="w-1/2 p-2">
                        <div class="mb-1 font-bold">
                            Nom
                        </div>
                        <div>
                            {{ participant.nom }}
                        </div>
                    </div>
                    <div class="w-1/2 p-2">
                        <div class="mb-1 font-bold">
                            Téléphone
                        </div>
                        <div>
                            {{ participant.telephone }}
                        </div>
                    </div>
                    <div class="w-1/2 p-2">
                        <div class="mb-1 font-bold">
                            Email
                        </div>
                        <div>
                            {{ participant.email }}
                        </div>
                    </div>
                    <div class="w-1/2 p-2">
                        <div class="mb-1 font-bold">
                            Campus
                        </div>
                        <div>
                            {{ participant.campus.nom }}
                        </div>
                    </div>

            </div>



        </div>
    </div>




</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function submitForm() {
            document.getElementById('form_picture').submit();
        }
    </script>
{% endblock %}
